---
import { Icon } from "astro-icon/components";
---

<section
  id="hero"
  class="h-[calc(100vh-200px)] min-h-[200px] flex flex-col items-center justify-center text-center bg-cover bg-no-repeat bg-center herorelative overflow-hidden bg-gradient-to-br from-violet-600 via-indigo-700 to-purple-800 dark:from-violet-950 dark:via-indigo-950 dark:to-purple-950"
>
  <div
    class="absolute inset-0 bg-[url('/placeholder.svg?height=500&width=500')] bg-repeat opacity-5"
  >
  </div>

  {/* Animated particles */}
  <div class="absolute inset-0 overflow-hidden">
    {
      Array.from({ length: 40 }).map((_, i) => (
        <div
          class="absolute rounded-full bg-white opacity-20"
          style={{
            width: `${Math.random() * 10 + 5}px`,
            height: `${Math.random() * 10 + 5}px`,
            top: `${Math.random() * 100}%`,
            left: `${Math.random() * 100}%`,
            animation: `float 3s linear infinite`,
            animationDelay: `${Math.random() * 5}s`,
          }}
        />
      ))
    }
  </div>
  <div
    class="absolute left-[10px] bottom-[200px] lg:left-[200px] 2xl:bottom-[260px] 2xl:left-[300px]"
    style={{
      animation: "float 3s linear infinite",
    }}
  >
    <img src="/astronautad.png" alt="astronauta" class="w-2xs rotate-30" />
  </div>
  <div class="mx-auto text-center">
    <h1
      class="mb-6 text-4xl font-extrabold tracking-tight text-white md:text-6xl"
    >
      Explorando el Universo del <br /><span class="text-gradient"
        >Desarrollo Web</span
      >
    </h1>
    <p class="mx-auto mb-10 max-w-2xl text-lg text-white/80 md:text-xl">
      Conoce mi experiencia y los proyectos he realizado
    </p>

    {/* Floating cards */}
    <div class="relative mt-16 hidden md:block">
      <div
        class="absolute right-[15%] top-10 animate-float"
        style={{ animationDelay: "0.5s" }}
      >
        <div
          class="rounded-lg border bg-card text-card-foreground w-48 -rotate-[5deg] overflow-hidden border-none shadow-xl bg-white"
        >
          <div class="bg-gradient-to-r to-yellow-300 from-yellow-400 p-1"></div>
          <div class="p-3">
            <div class="flex items-center gap-2">
              <div
                class="h-8 w-8 rounded-full bg-violet-100 flex items-center justify-center"
              >
                <span class="font-bold">+10</span>
              </div>
              <div>
                <p class="text-xs font-bold">AÃ±os de experiencia</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute w-full bottom-50 left-0">
    <svg viewBox="0 0 1440 220">
      <path
        fill="white"
        fill-opacity="1"
        d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,149.3C960,160,1056,160,1152,138.7C1248,117,1344,75,1392,53.3L1440,32L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
      ></path>
    </svg>
  </div>
</section>

<script>
  const heroSection = document.getElementById("hero");

  window.addEventListener("scroll", () => {
    if (heroSection) {
      const scrollPosition = window.scrollY;
      heroSection.style.backgroundPositionY = `${scrollPosition * 0.5}px`;
    }
  });
</script>
