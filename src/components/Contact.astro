//import { Icon } from 'astro-icon';
---

<section id="contact" class="py-20 px-4 md:px-20 bg-gray-50">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-4 text-gray-800">Let's Connect</h2>
    <p class="text-xl mb-8 text-gray-600">Interested in working together? Let's talk!</p>
    <div class="flex flex-wrap justify-center gap-4">
      <a
        href="mailto:your.email@example.com"
        class="inline-flex items-center justify-center px-8 py-3 text-lg font-semibold text-white bg-primary hover:bg-primary/90 transition-colors duration-300 rounded-full"
      >
        <!-- <Icon name="lucide:mail" class="w-5 h-5 mr-2" /> -->
        Contact Me
      </a>
      <a
        href="https://github.com/yourusername"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-8 py-3 text-lg font-semibold text-primary bg-white border border-primary hover:bg-primary hover:text-white transition-colors duration-300 rounded-full"
      >
        <!-- <Icon name="lucide:github" class="w-5 h-5 mr-2" /> -->
        GitHub
      </a>
      <a
        href="https://linkedin.com/in/yourusername"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-8 py-3 text-lg font-semibold text-primary bg-white border border-primary hover:bg-primary hover:text-white transition-colors duration-300 rounded-full"
      >
        <!-- <Icon name="lucide:linkedin" class="w-5 h-5 mr-2" /> -->
        LinkedIn
      </a>
    </div>
  </div>
</section>

