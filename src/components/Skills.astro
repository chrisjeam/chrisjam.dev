---
const skills = [
  "JavaScript",
  "React",
  "HTML5",
  "CSS3",
  "Node.js",
  "Vue.js",
  "TypeScript",
  "GraphQL",
  "Tailwind CSS",
  "Git",
];
---

<section id="skills" class="py-20 px-4 md:px-20 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">Skills & Technologies</h2>
    <div class="flex flex-wrap justify-center gap-4">
      {skills.map((skill) => (
        <span
          class="px-4 py-2 text-lg bg-white text-primary hover:bg-primary hover:text-white transition-colors duration-300 rounded-full shadow-sm"
        >
          {skill}
        </span>
      ))}
    </div>
  </div>
</section>

